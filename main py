from flask import Flask, request
import requests
import json

app = Flask(_name_)

# ðŸ”´ IMPORTANT: Change this line to your Firebase link (I'll help you below)
FIREBASE_URL = "https://myaiapp-data-default-rtdb.asia-southeast1.firebasedatabase.app/userdata.json"

@app.route('/save', methods=['POST'])
def save_data():
    data = request.json
    response = requests.post(FIREBASE_URL, json=data)
    return {"status": "success", "firebase_response": response.json()}

if _name_ == '_main_':
    app.run()
